{% extends "base.html.twig" %}
{% block title %}
Evaluation Trimestrielle
{% endblock %}
{% block body %}

		<div class="eval-container">
			<h1 class="title">SAISIE EVALUATION TRIMESTRIELLE</h1>
			<div class="inner-container container-sm">
				<div class="form-container container-fluid" >

					{{ form_start(form, {'attr': {'class': 'form-container container-fluid'}}) }}
					<div class="form-group form-flex-half row">
						{{ form_label(form.numero, 'Numero:', {'label_attr': {'class': ''}}) }}
						{{ form_widget(form.numero, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="form-group form-flex row">
						{{ form_label(form.code, 'Annéé Scolaire:', {'label_attr': {'class': 'col-12 col-md-5'}}) }}
						{{ form_widget(form.code, {'attr': {'class': 'form-control col-12 col-md-5'}}) }}
					</div>
					<div class="form-group form-flex row">
						{{ form_label(form.trimestre, 'Triméstre:', {'label_attr': {'class': 'col-12 col-md-5'}}) }}
						{{ form_widget(form.trimestre, {'attr': {'class': 'form-control col-12 col-md-5'}}) }}
					</div>
					<div class="form-group form-flex row">
						{{ form_label(form.individu, 'Formateur:', {'label_attr': {'class': 'col-12 col-md-5'}}) }}
						{{ form_widget(form.individu, {'attr': {'class': 'form-control col-12 col-md-5'}}) }}
					</div>
					<div class="form-group form-flex row">
						{{ form_label(form.libelle, 'Classe:', {'label_attr': {'class': 'col-12 col-md-5'}}) }}
						{{ form_widget(form.libelle, {'attr': {'class': 'form-control col-12 col-md-5'}}) }}
					</div>
					<div class="form-group form-flex row">
						{{ form_label(form.matiere, 'Matière:', {'label_attr': {'class': 'col-12 col-md-5'}}) }}
						{{ form_widget(form.matiere, {'attr': {'class': 'form-control col-12 col-md-5'}}) }}
					</div>
					<div class="buttons d-flex justify-content-between my-3">
						<a id="show_modal_art" href="#modal_art" class="btn btn-dark">Modifier</a>
						<a href="" class="btn btn-primary">Importer</a>
						<a href="" class="btn btn-success">Exporter vers Excel</a>
						<input type="submit" value="submit">
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
		
		<div id="modal_art" class="">
			<div id="modal_art_content">
				<h1 class="title text-dark" id="client">MODIFICATION NOTE</h1>
				<a href="" id="modal_close">
					<i class="fa fa-close"></i>
				</a>
				<div action="" class="text_center">
					<div class="zone_saisie my-2 row">
						<label for="" class="lab20 fw-bold col-12 col-md-3">CODE</label>
						<input type="text" id="id" name="" value="" class="form-control w-50">
					</div>
					<div class="zone_saisie my-2 fw-bold row ">
						<label for="numClient" class="col-12 col-md-3">NOM & PRENOM</label>
						<input type="text" id="numClient" name="numClient" class="form-control w-50">
					</div>
					<div class="zone_saisie my-2 fw-bold row ">
						<label for="nomClient" class="col-12 col-md-3">NOTE</label>
						<input type="text" id="nomClient" name="nomClient" class="form-control w-50">
					</div>
					<div class="zone_saisie my-2 fw-bold row ">
						<label for="adresseClient" class="col-12 col-md-3">APPRECIATION</label>
						<textarea id="adresseClient" name="adresseClient" class="form-control w-50"></textarea>
					</div>
					<div class=" d-flex justify-content-between mt-4">
						<a href="" class="btn btn-secondary">Fermer</a>
						<a href="" class="btn btn-primary">Annuler</a>
						<a href="" class="btn btn-success">Valider</a>
					</div>
				</div>
				<img id="loader" src="img/loader1.gif" alt="">
			</div>
		</div>
{% endblock %}